{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "almond",
  "name": "Detatch API",
  "colors": {
    "primary": "#000000",
    "light": "#0c0c0c",
    "dark": "#0c0c0c"
  },
  "favicon": "/images/Detatchicon.png",
  "navigation": {
    "tabs": [
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "API documentation",
            "pages": [
              "api-reference/introduction",
              "openapi.json" 
            ]
          }
        ]
      }
    ]
  },
  "logo": "/images/Detatch.png",
  "navbar": {
    "links": [],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://app.detatch.nl"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "integrations": {
    "intercom": {
      "appId": "naviv1oa"
    }
